		pwdSenha = new JPasswordField();
		pwdSenha.setToolTipText("");
		pwdSenha.setBounds(250, 117, 144, 20);
		contentPane.add(pwdSenha);
		
		
		  Redimensionar resize = new Redimensionar();
		
		JLabel lblStatus = new JLabel("");
		lblStatus.setCursor(Cursor.getPredefinedCursor(Cursor.DEFAULT_CURSOR));
		lblStatus.setHorizontalTextPosition(SwingConstants.CENTER);
		lblStatus.setHorizontalAlignment(SwingConstants.CENTER);
		lblStatus.setIcon(new ImageIcon(TelaLogin.class.getResource("/br/com/infox/icones/cancel.png")));
		lblStatus.setBounds(184, 167, 127, 83);
		resize.redimensionar(lblStatus, 200, 50);
		contentPane.add(lblStatus);
		
		JPanel panel = new JPanel();
		panel.setBackground(new Color(0, 139, 139));
		panel.setBounds(0, 0, 177, 261);
		contentPane.add(panel);
		panel.setLayout(null);
		
